pipeline {
    agent any

    stages {
        stage('Greeting') {
            steps {
                echo 'Hello, World!'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the application...'
            }
        }
    }
}
